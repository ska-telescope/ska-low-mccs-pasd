{
    "name": "ska-low-mccs-pasd devcontainer",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash",
                        "args": [
                            "--login"
                        ]
                    }
                },
                "terminal.integration.defaultProfile.linux": "bash",
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.organizeImports": "explicit"
                },
                "python.pythonPath": "/usr/bin/python3",
                "python.testing.pytestEnabled": true,
                "pylint.path": [
                    "/usr/local/bin/pylint"
                ],
                "[python]": {
                    "editor.defaultFormatter": "ms-python.black-formatter"
                },
                "isort.args": [
                    "--profile",
                    "black"
                ],
                "coverage-gutters.manualCoverageFilePaths": [
                    "/workspaces/ska-low-mccs-pasd/build/reports/code-coverage.xml"
                ],
                "coverage-gutters.showLineCoverage": true
            },
            "extensions": [
                "ms-python.pylint",
                "ms-python.python",
                "ms-python.black-formatter",
                "ms-python.flake8",
                "ms-python.isort",
                "ms-python.mypy-type-checker",
                "ryanluker.vscode-coverage-gutters",
                "lextudio.restructuredtext",
                "trond-snekvik.simple-rst"
            ]
        }
    },
    "postCreateCommand": "sudo poetry config virtualenvs.create false && sudo poetry install && echo 'source /usr/share/bash-completion/completions/git' >> ~/.bashrc && sudo git config --system --add core.editor 'nano -b -r 72' && echo 'source /workspaces/ska-low-mccs-pasd/.devcontainer/make-autocompletion' >> ~/.bashrc",
    "postStartCommand": "cp .devcontainer/git-pre-commit-hook .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit && cp .devcontainer/git-prepare-commit-msg-hook .git/hooks/prepare-commit-msg && chmod +x .git/hooks/prepare-commit-msg && make help | sed 's/\\x1B\\[[0-9;]*[mGK]//g' | egrep -o '^[a-z][a-z0-9\\-]+|^[A-Z][A-Z0-9_]+' | egrep -v 'MAKE|SECTION' > .devcontainer/make-autocompletion-list.txt",
    "remoteUser": "tango"
}