{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://skao.int/MccsPasdBus_TurnFndhPortOn.json",
    "title": "MccsPasdBus TurnFndhPortOn schema",
    "description": "Schema for MccsPasdBus's TurnFndhPortOn command",
    "type": "object",
    "properties": {
        "port_number": {
            "description": "Number of the port to turn on",
            "type": "integer",
            "minimum": 1,
            "maximum": 28
        },
        "stay_on_when_offline": {
            "description": "Whether to stay on when M&C is offline",
            "type": "boolean"
        }
    },
    "required": ["port_number", "stay_on_when_offline"]
}
