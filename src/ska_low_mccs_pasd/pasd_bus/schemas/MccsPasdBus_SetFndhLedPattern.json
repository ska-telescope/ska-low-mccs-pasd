{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://skao.int/MccsPasdBus_SetFndhLedPattern.json",
    "title": "MccsPasdBus SetFndhLedPattern schema",
    "description": "Schema for MccsPasdBus's SetFndhLedPattern command",
    "type": "object",
    "properties": {
        "service_led": {
            "description": "Name of the service LED pattern",
            "type": "string",
            "enum": [
                "OFF",
                "ON",
                "VFAST",
                "FAST",
                "SLOW",
                "VSLOW"
            ]
        },
        "status_led": {
            "description": "Name of the status LED pattern",
            "type": "string",
            "enum": [
                "OFF",
                "GREEN",
                "GREENSLOW",
                "GREENFAST",
                "GREENVFAST",
                "GREENDOTDASH",
                "YELLOW",
                "YELLOWSLOW",
                "YELLOWFAST",
                "YELLOWVFAST",
                "YELLOWDOTDASH",
                "RED",
                "REDSLOW",
                "REDFAST",
                "REDVFAST",
                "REDDOTDASH",
                "YELLOWRED",
                "YELLOWREDSLOW",
                "GREENRED"
            ]
        }
    },
    "required": [
        "service_led",
        "status_led"
    ]
}