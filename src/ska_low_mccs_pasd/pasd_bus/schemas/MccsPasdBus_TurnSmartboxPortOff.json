{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://skao.int/MccsPasdBus_TurnSmartboxPortOff.json",
    "title": "MccsPasdBus TurnSmartboxPortOff schema",
    "description": "Schema for MccsPasdBus's TurnSmartboxPortOff command",
    "type": "object",
    "properties": {
        "smartbox_number": {
            "description": "Number of the smartbox being addressed",
            "type": "integer",
            "minimum": 1,
            "maximum": 24
        },
        "port_number": {
            "description": "Number of the port to turn off",
            "type": "integer",
            "minimum": 1,
            "maximum": 12
        }
    },
    "required": ["smartbox_number", "port_number"]
}
