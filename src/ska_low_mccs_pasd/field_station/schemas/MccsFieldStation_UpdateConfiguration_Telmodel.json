{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://skao.int/MccsFieldStation_Updateconfiguration.json",
    "title": "MccsFieldStation's UpdateConfiguration schema",
    "description": "Schema for MccsFieldStation's UpdateConfiguration command",
    "type": "object",
    "properties": {
        "antennas": {
            "description": "the antennas",
            "type": "object",
            "minProperties": 0,
            "maxProperties": 256,
            "patternProperties": {
                "[a-zA-Z0-9_]+": {
                    "description": "the antennas",
                    "type": "object",
                    "properties": {
                        "location_offset": {
                            "type": "object",
                            "properties": {
                                "east": {
                                    "type": "number"
                                },
                                "north": {
                                    "type": "number"
                                },
                                "up": {
                                    "type": "number"
                                }
                            }
                        },
                        "eep": {
                            "type": "integer"
                        },
                        "smartbox": {
                            "type": "string"
                        },
                        "masked": {
                            "type": "boolean"
                        },
                        "tpm": {
                            "type": "string"
                        },
                        "tpm_y_channel": {
                            "type": "integer"
                        },
                        "tpm_x_channel": {
                            "type": "integer"
                        },
                        "tpm_input": {
                            "type": "integer"
                        }
                    },
                    "required": [
                        "smartbox",
                        "smartbox_port"
                    ]
                }
            }
        },
        "pasd": {
            "description": "PaSD configuration",
            "type": "object",
            "properties": {
                "smartboxes": {
                    "description": "Smartbox configuration",
                    "type": "object",
                    "patternProperties": {
                        "[a-zA-Z0-9_]+": {
                            "type": "object",
                            "minProperties": 2,
                            "maxProperties": 2,
                            "properties": {
                                "fndh_port": {
                                    "type": "integer"
                                },
                                "modbus_id": {
                                    "type": "integer"
                                }
                            },
                            "required": [
                                "fndh_port",
                                "modbus_id"
                            ]
                        }
                    }
                },
                "gateway": {
                    "description": "gateway configuration",
                    "type": "object",
                    "patternProperties": {
                        "[a-zA-Z0-9_]+": {
                            "type": "object",
                            "properties": {
                                "simulated": {
                                    "type": "boolean"
                                },
                                "host": {
                                    "type": "string"
                                },
                                "port": {
                                    "type": "integer"
                                },
                                "timeout": {
                                    "type": "number"
                                },
                                "polling_rate": {
                                    "type": "number"
                                },
                                "device_polling_rate": {
                                    "type": "number"
                                }
                            }
                        }
                    }
                },
                "controller": {
                    "type": "object",
                    "properties": {
                        "modbus_id": {
                            "type": "number"
                        }
                    }
                }
            }
        }
    },
    "required": [
        "antennas",
        "pasd"
    ]
}