{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://skao.int/MccsFieldStation_Updateconfiguration.json",
    "title": "MccsFieldStation's UpdateConfiguration schema",
    "description": "Schema for MccsFieldStation's UpdateConfiguration command",
    "type": "object",
    "properties": {
        "antennas": {
            "description": "the antennas",
            "type": "object",
            "minProperties": 0,
            "maxProperties": 256,
            "patternProperties": {
                "[a-zA-Z0-9_]+": {
                  	"description": "the antennas",
                    "type": "object",
                    "minItems": 3,
                    "maxItems": 3,
                    "properties": {
                        "smartbox": {
                            "type": "string"
                        },
                        "masked": {
                            "type": "boolean"
                        },
                        "smartbox_port": {
                            "type": "integer"
                        }
                    },
                    "required": ["smartbox", "smartbox_port", "masked"]
                }
            }
        },
        "pasd": {
            "description": "PaSD configuration",
            "minProperties": 1,
            "maxProperties": 1,
            "type": "object",
            "properties": {
                "smartboxes": {
                    "description": "Smartbox configuration",
                    "minProperties": 0,
                    "maxProperties": 24,
                    "type": "object",
                    "patternProperties": {
                        "[a-zA-Z0-9_]+": {
                            "type": "object",
                            "minProperties": 1,
                            "maxProperties": 1,
                            "properties": {
                                "fndh_port": {
                                    "type": "integer"
                                }
                            },
                            "required": ["fndh_port"]
                        }
                    }
                }
            }
        }
    },
    "required": [
        "antennas",
      	"pasd"
    ]
}