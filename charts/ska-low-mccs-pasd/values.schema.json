{
  "$schema": "http://json-schema.org/schema#",
  "$comment": "schema for ska-low-mccs-pasd chart values file",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "registry": {
          "$comment": "registry is a URI, but could be scheme-less",
          "type": "string",
          "pattern": "^(https?://)?[a-z0-9-.]+(/[a-z0-9-_/.]+)?$"
        },
        "tag": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string",
              "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)((-dev\\.c[0-9a-f]{8})|(-dirty))?$"
            }
          ],
          "type": [
            "string",
            "null"
          ]
        },
        "pullPolicy": {
          "type": "string",
          "pattern": "^(Always|Never|IfNotPresent)$"
        }
      }
    },
    "deviceServers": {
      "type": "object",
      "properties": {
        "fieldstations": {
          "type": "object",
          "propertyNames": {
            "$comment": "Slug used to construct server name, k8s pods, etc",
            "format": "hostname"
          },
          "additionalProperties": {
            "type": "object",
            "propertyNames": {
              "$comment": "device TRL",
              "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
            },
            "additionalProperties": {
              "type": "object",
              "properties": {
                "fndh_name": {
                  "type": "string",
                  "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
                },
                "fncc_name": {
                  "type": "string",
                  "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
                },
                "configuration_host": {
                  "type": "string",
                  "format": "hostname"
                },
                "configuration_port": {
                  "type": "integer",
                  "minimum": 1
                },
                "smartbox_names": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
                  },
                  "maxLength": 24
                },
                "config_uri": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "logging_level_default": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 5
                }
              },
              "required": [
                "fndh_name",
                "configuration_host",
                "configuration_port",
                "smartbox_names"
              ],
              "additionalProperties": false
            }
          }
        },
        "fndhs": {
          "type": "object",
          "propertyNames": {
            "$comment": "Slug used to construct server name, k8s pods, etc",
            "format": "hostname"
          },
          "additionalProperties": {
            "type": "object",
            "propertyNames": {
              "$comment": "device TRL",
              "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
            },
            "additionalProperties": {
              "type": "object",
              "properties": {
                "pasdbus_name": {
                  "type": "string",
                  "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
                },
                "logging_level_default": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 5
                }
              },
              "required": [
                "pasdbus_name"
              ],
              "additionalProperties": false
            }
          }
        },
        "fnccs": {
          "type": "object",
          "propertyNames": {
            "$comment": "Slug used to construct server name, k8s pods, etc",
            "format": "hostname"
          },
          "additionalProperties": {
            "type": "object",
            "propertyNames": {
              "$comment": "device TRL",
              "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
            },
            "additionalProperties": {
              "type": "object",
              "properties": {
                "pasdbus_name": {
                  "type": "string",
                  "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
                },
                "logging_level_default": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 5
                }
              },
              "required": [
                "pasdbus_name"
              ],
              "additionalProperties": false
            }
          }
        },
        "smartboxes": {
          "type": "object",
          "propertyNames": {
            "$comment": "Slug used to construct server name, k8s pods, etc",
            "format": "hostname"
          },
          "additionalProperties": {
            "type": "object",
            "propertyNames": {
              "$comment": "device TRL",
              "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
            },
            "additionalProperties": {
              "type": "object",
              "properties": {
                "smartbox_number": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 24
                },
                "fndh_name": {
                  "type": "string",
                  "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
                },
                "field_station_name": {
                  "type": "string",
                  "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
                },
                "fndh_port": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 28
                },
                "pasdbus_name": {
                  "type": "string",
                  "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
                },
                "logging_level_default": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 5
                }
              },
              "required": [
                "fndh_name",
                "field_station_name",
                "fndh_port",
                "pasdbus_name"
              ],
              "additionalProperties": false
            }
          }
        },
        "pasdbuses": {
          "type": "object",
          "propertyNames": {
            "$comment": "Slug used to construct server name, k8s pods, etc",
            "format": "hostname"
          },
          "additionalProperties": {
            "type": "object",
            "propertyNames": {
              "$comment": "device TRL",
              "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
            },
            "additionalProperties": {
              "type": "object",
              "properties": {
                "host": {
                  "type": "string",
                  "format": "hostname"
                },
                "port": {
                  "type": "integer",
                  "minimum": 1
                },
                "timeout": {
                  "type": "number",
                  "minimum": 0
                },
                "polling_rate": {
                  "type": "number",
                  "minimum": 0
                },
                "device_polling_rate": {
                  "type": "number",
                  "minimum": 0
                },
                "low_pass_filter_cutoff": {
                  "type": "number",
                  "minimum": 0
                },
                "simulation_config": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 1
                },
                "logging_level_default": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 5
                }
              },
              "required": [
                "host",
                "port",
                "timeout"
              ],
              "additionalProperties": false
            }
          }
        }
      },
      "additionalProperties": false
    },
    "simulators": {
      "type": "object",
      "properties": {
        "pasds": {
          "propertyNames": {
            "$comment": "Slug used to construct server name, k8s pods, etc",
            "format": "hostname"
          },
          "additionalProperties": {
            "type": "object",
            "properties": {
              "host": {
                "type": "string",
                "format": "hostname"
              },
              "port": {
                "type": "integer",
                "minimum": 1
              },
              "time_multiplier": {
                "type": "number",
                "exclusiveMinimum": 0
              }
            },
            "required": [
              "host",
              "port"
            ],
            "additionalProperties": false
          }
        }
      }
    },
    "configServers": {
      "type": "object",
      "propertyNames": {
        "$comment": "Slug used to construct server name, k8s pods, etc",
        "format": "hostname"
      },
      "additionalProperties": {
        "type": "object",
        "properties": {
          "host": {
            "type": "string",
            "format": "hostname"
          },
          "port": {
            "type": "integer",
            "minimum": 1
          }
        },
        "required": ["host", "port"],
        "additionalProperties": false
      }
    },
    "referenceData": {
      "type": "object",
      "properties": {
        "pasdconfiguration": {
          "propertyNames": {
            "$comment": "Slug used to construct server name, k8s pods, etc",
            "format": "hostname"
          },
          "additionalProperties": {
            "type": "object",
            "properties": {
              "pasd": {
                "type": "object",
                "properties": {
                  "smartboxes": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "object",
                      "properties": {
                        "smartboxes": {
                          "type": "object",
                          "properties": {
                            "fndh_port": {
                              "type": "integer",
                              "minimum": 1,
                              "maximum": 28
                            }
                          },
                          "required": [
                            "fndh_port"
                          ],
                          "additionalProperties": false
                        }
                      }
                    }
                  }
                },
                "required": [
                  "smartboxes"
                ],
                "additionalProperties": false
              },
              "antennas": {
                "type": "object",
                "additionalProperties": {
                  "type": "object",
                  "properties": {
                    "smartbox": {
                      "type": "string"
                    },
                    "smartbox_port": {
                      "type": "integer",
                      "minimum": 1,
                      "maximum": 12
                    },
                    "masked": {
                      "type": "boolean"
                    }
                  },
                  "required": [
                    "smartbox",
                    "smartbox_port"
                  ],
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          }
        }
      }
    }
  },
  "required": ["deviceServers", "configServers", "simulators", "referenceData"]
}
