{
  "$schema": "http://json-schema.org/schema#",
  "$comment": "schema for ska-low-mccs-pasd chart values file",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "registry": {
          "$comment": "registry is a URI, but could be scheme-less",
          "type": "string",
          "pattern": "^(https?://)?[a-z0-9-.]+(/[a-z0-9-_/.]+)?$"
        },
        "tag": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string",
              "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)((-dev\\.c[0-9a-f]{8})|(-dirty))?$"
            }
          ]
        },
        "pullPolicy": {
          "type": "string",
          "pattern": "^(Always|Never|IfNotPresent)$"
        }
      }
    },
    "deviceServers": {
      "type": "object",
      "propertyNames": {
        "$comment": "device server name",
        "format": "hostname"
      },
      "additionalProperties": {
        "type": "object",
        "properties": {
          "devices": {
            "oneOf": [
              {
                "type": "null"
              },
              {
                "type": "object",
                "properties": {
                  "MccsFieldStation": {
                    "oneOf": [
                      {
                        "type": "null"
                      },
                      {
                        "type": "object",
                        "propertyNames": {
                          "$comment": "device TRL",
                          "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
                        },
                        "additionalProperties": {
                          "oneOf": [
                            {
                              "type": "null"
                            },
                            {
                              "type": "object",
                              "properties": {
                                "StationName": {
                                  "type": "string",
                                  "format": "hostname"
                                },
                                "FndhFQDN": {
                                  "type": "string",
                                  "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
                                },
                                "ConfigurationHost": {
                                  "type": "string",
                                  "format": "hostname"
                                },
                                "ConfigurationPort": {
                                  "type": "integer",
                                  "minimum": 1
                                },
                                "SmartBoxFQDNs": {
                                  "type": "array",
                                  "items": {
                                    "type": "string",
                                    "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
                                  },
                                  "maxLength": 24
                                },
                                "TMConfigURI": {
                                  "type": "array",
                                  "items": {
                                    "type": "string"
                                  }
                                },
                                "LoggingLevelDefault": {
                                  "type": "integer",
                                  "minimum": 0,
                                  "maximum": 5
                                }
                              },
                              "required": [
                                "FndhFQDN",
                                "ConfigurationHost",
                                "ConfigurationPort",
                                "SmartBoxFQDNs"
                              ],
                              "additionalProperties": true
                            }
                          ]
                        }
                      }
                    ]
                  },
                  "MccsFNDH": {
                    "oneOf": [
                      {
                        "type": "null"
                      },
                      {
                        "type": "object",
                        "propertyNames": {
                          "$comment": "device TRL",
                          "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
                        },
                        "additionalProperties": {
                          "oneOf": [
                            {
                              "type": "null"
                            },
                            {
                              "type": "object",
                              "properties": {
                                "PasdFQDN": {
                                  "type": "string",
                                  "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
                                },
                                "LoggingLevelDefault": {
                                  "type": "integer",
                                  "minimum": 0,
                                  "maximum": 5
                                }
                              },
                              "required": [
                                "PasdFQDN"
                              ],
                              "additionalProperties": true
                            }
                          ]
                        }
                      }
                    ]
                  },
                  "MccsFncc": {
                    "oneOf": [
                      {
                        "type": "null"
                      },
                      {
                        "type": "object",
                        "propertyNames": {
                          "$comment": "device TRL",
                          "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
                        },
                        "additionalProperties": {
                          "oneOf": [
                            {
                              "type": "null"
                            },
                            {
                              "type": "object",
                              "properties": {
                                "PasdFQDN": {
                                  "type": "string",
                                  "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
                                },
                                "LoggingLevelDefault": {
                                  "type": "integer",
                                  "minimum": 0,
                                  "maximum": 5
                                }
                              },
                              "required": [
                                "PasdFQDN"
                              ],
                              "additionalProperties": true
                            }
                          ]
                        }
                      }
                    ]
                  },
                  "MccsSmartbox": {
                    "oneOf": [
                      {
                        "type": "null"
                      },
                      {
                        "type": "object",
                        "propertyNames": {
                          "$comment": "device TRL",
                          "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
                        },
                        "additionalProperties": {
                          "oneOf": [
                            {
                              "type": "null"
                            },
                            {
                              "type": "object",
                              "properties": {
                                "SmartboxNumber": {
                                  "type": "integer",
                                  "minimum": 1,
                                  "maximum": 24
                                },
                                "FndhFQDN": {
                                  "type": "string",
                                  "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
                                },
                                "FieldStationName": {
                                  "type": "string",
                                  "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
                                },
                                "PasdFQDN": {
                                  "type": "string",
                                  "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
                                },
                                "LoggingLevelDefault": {
                                  "type": "integer",
                                  "minimum": 0,
                                  "maximum": 5
                                }
                              },
                              "required": [
                                "SmartboxNumber",
                                "FndhFQDN",
                                "FieldStationName",
                                "PasdFQDN"
                              ],
                              "additionalProperties": true
                            }
                          ]
                        }
                      }
                    ]
                  },
                  "MccsPasdBus": {
                    "oneOf": [
                      {
                        "type": "null"
                      },
                      {
                        "type": "object",
                        "propertyNames": {
                          "$comment": "device TRL",
                          "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
                        },
                        "additionalProperties": {
                          "oneOf": [
                            {
                              "type": "null"
                            },
                            {
                              "type": "object",
                              "properties": {
                                "Host": {
                                  "type": "string",
                                  "format": "hostname"
                                },
                                "Port": {
                                  "type": "integer",
                                  "minimum": 1
                                },
                                "Timeout": {
                                  "type": "number",
                                  "minimum": 0
                                },
                                "PollingRate": {
                                  "type": "number",
                                  "minimum": 0
                                },
                                "DevicePollingRate": {
                                  "type": "number",
                                  "minimum": 0
                                },
                                "LowPassFilterCutoff": {
                                  "type": "number",
                                  "minimum": 0
                                },
                                "SimulationConfig": {
                                  "type": "integer",
                                  "minimum": 0,
                                  "maximum": 1
                                },
                                "LoggingLevelDefault": {
                                  "type": "integer",
                                  "minimum": 0,
                                  "maximum": 5
                                },
                                "AvailableSmartboxes": {
                                  "type": "array",
                                  "items": {
                                    "type": "integer"
                                  },
                                  "maxLength": 24
                                }
                              },
                              "required": [
                                "Host",
                                "Port",
                                "Timeout"
                              ],
                              "additionalProperties": true
                            }
                          ]
                        }
                      }
                    ]
                  }
                },
                "additionalProperties": false
              }
            ]
          },
          "simulators": {
            "type": "object",
            "properties": {
              "pasds": {
                "propertyNames": {
                  "$comment": "Slug used to construct server name, k8s pods, etc",
                  "format": "hostname"
                },
                "additionalProperties": {
                  "oneOf": [
                    {
                      "type": "null"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "host": {
                          "type": "string",
                          "format": "hostname"
                        },
                        "port": {
                          "type": "integer",
                          "minimum": 1
                        },
                        "time_multiplier": {
                          "type": "number",
                          "exclusiveMinimum": 0
                        }
                      },
                      "required": [
                        "host",
                        "port"
                      ],
                      "additionalProperties": false
                    }
                  ]
                }
              }
            }
          },
          "configServers": {
            "type": "object",
            "propertyNames": {
              "$comment": "Slug used to construct server name, k8s pods, etc",
              "format": "hostname"
            },
            "additionalProperties": {
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "object",
                  "properties": {
                    "host": {
                      "type": "string",
                      "format": "hostname"
                    },
                    "port": {
                      "type": "integer",
                      "minimum": 1
                    }
                  },
                  "required": [
                    "host",
                    "port"
                  ],
                  "additionalProperties": false
                }
              ]
            }
          },
          "referenceData": {
            "type": "object",
            "properties": {
              "pasdconfiguration": {
                "propertyNames": {
                  "$comment": "Slug used to construct server name, k8s pods, etc",
                  "format": "hostname"
                },
                "additionalProperties": {
                  "type": "object",
                  "properties": {
                    "pasd": {
                      "oneOf": [
                        {
                          "type": "null"
                        },
                        {
                          "type": "object",
                          "properties": {
                            "smartboxes": {
                              "oneOf": [
                                {
                                  "type": "null"
                                },
                                {
                                  "type": "object",
                                  "additionalProperties": {
                                    "oneOf": [
                                      {
                                        "type": "null"
                                      },
                                      {
                                        "type": "object",
                                        "properties": {
                                          "fndh_port": {
                                            "type": "integer",
                                            "minimum": 1,
                                            "maximum": 28
                                          }
                                        },
                                        "required": [
                                          "fndh_port"
                                        ],
                                        "additionalProperties": false
                                      }
                                    ]
                                  }
                                }
                              ]
                            }
                          },
                          "required": [
                            "smartboxes"
                          ],
                          "additionalProperties": false
                        }
                      ]
                    },
                    "antennas": {
                      "oneOf": [
                        {
                          "type": "null"
                        },
                        {
                          "type": "object",
                          "additionalProperties": {
                            "oneOf": [
                              {
                                "type": "null"
                              },
                              {
                                "type": "object",
                                "properties": {
                                  "smartbox": {
                                    "type": "string"
                                  },
                                  "smartbox_port": {
                                    "type": "integer",
                                    "minimum": 1,
                                    "maximum": 12
                                  },
                                  "masked": {
                                    "type": "boolean"
                                  }
                                },
                                "required": [
                                  "smartbox",
                                  "smartbox_port"
                                ],
                                "additionalProperties": false
                              }
                            ]
                          }
                        }
                      ]
                    }
                  },
                  "additionalProperties": false
                }
              }
            }
          }
        }
      }
    }
  },
  "required": [
    "deviceServers",
    "configServers",
    "simulators",
    "referenceData"
  ]
}